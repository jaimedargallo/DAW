F_Nacimiento DATE,
Poblacion VARCHAR2(20) DEFAULT ' CIUDAD REAL ',
FechaNacimiento DATE CONSTRAINT CLI_NAC_CK CHECK (Fecha BETWEEN '01/JAN/1920' AND '01/JAN/2020'),
Apellido1 VARCHAR2 (50),
Apellido2 VARCHAR2 (50),
Sexo VARCHAR2 (1) CONSTRAINT CLI_SEX_CK CHECK (Sexo in ('H','M')),
ID_CLIENTE NUMBER (20),



