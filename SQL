CREATE TABLE V_CLIENTES (
    NIF VARCHAR2(9) CONSTRAINT CLI_NIF_PK PRIMARY KEY,
    Nombre VARCHAR2 (20) CONSTRAINT CLIENTES_UK UNIQUE NOT NULL,
    Apellidos VARCHAR2 (50),
    Direccion VARCHAR2 (100),
    Sexo VARCHAR2 (1),
    Telefono NUMBER (13) 
);

CREATE TABLE V_VEHICULOS (
    Marca VARCHAR2 (20),
    Modelo VARCHAR2 (20),
    Matricula VARCHAR2 (9) CONSTRAINT VEH_MAT_PK PRIMARY KEY,
    Potencia VARCHAR2 (5) CHECK (Potencia BETWEEN 500 AND 10000),
    T_Seguro VARCHAR2 (20),
    P_Seguro VARCHAR2 (9),
    NIF VARCHAR2 (9) CONSTRAINT NIF_CLI_FK REFERENCES V_CLIENTES
);

CREATE TABLE V_VEHIC_ACCID (
    MATRICULA VARCHAR2 (9) CONSTRAINT MAT_VEH_FK REFERENCES V_VEHICULOS,
    Fecha DATE CONSTRAINT ACC_FEC_CK CHECK (Fecha BETWEEN '01/JAN/1950' AND '31/DEC/2050'),
    Responsable VARCHAR2 (1) CONSTRAINT ACC_RES_CK CHECK (Responsable IN ('S','N')),
    Descripcion VARCHAR2 (1000)
    
);

